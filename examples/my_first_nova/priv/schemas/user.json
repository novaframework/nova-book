{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "integer", "description": "Unique identifier" },
    "name": { "type": "string", "description": "User's full name" },
    "email": { "type": "string", "format": "email", "description": "Email address" }
  },
  "required": ["name", "email"]
}
